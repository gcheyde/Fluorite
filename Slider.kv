<SliderWidget>:

    Slider:
        orientation: "vertical"
        min: 0
        max: 100
        value: 0
        on_value: label1.text = str(int(self.value))

    Label:
        id: label1
        font_size: "30sp"
        text: "0"
        color: 1, 0, 0, 1

    Slider:
        orientation: "horizontal"
        min: 0
        max: 100
        value: 30
        on_value: label2.text = str(int(self.value))

    Label:
        id: label2
        font_size: "30sp"
        text: "30"
        color: 0, 0, 1, 1